@import url('https://fonts.googleapis.com/css?family=Audiowide|Cairo|Changa|Josefin+Slab|Orbitron|Permanent+Marker');

body
html
  margin 0
  padding 0
  box-sizing border-box
  font-size 10px
  height 100%
  width 100%

#app
  height 100%
  width 100%
  position relative


btnFactory(bgColor)
    outline 0
    margin 8px
    padding 8px
    font-size 1.2rem
    border 0
    color rgba(255,255,255,0.5)
    border-radius 5px
    background-color bgColor
    box-shadow 0 1px 3px 0 rgba(0,0,0,0.3)
    cursor pointer
    transition color .5s, background-color .5s
    &:hover
        color rgba(255,255,255,0.8)
        background-color darken(@background-color, 10%)

.btn
    btnFactory(#5A73EE)

.ui-item
    min-width 100px

.bg-green
    background-color #36BF4C
    &:hover
        color rgba(255,255,255,0.8)
        background-color darken(#36BF4C, 10%)

.bg-white
    background-color #fff
    &:hover
        color rgba(0,0,0,0.9)
        background-color darken(#fff, 10%)

.bg-yellow
    background-color #FFF300
    color rgba(0,0,0,0.8)
    &:hover
        color rgba(0,0,0,0.9)
        background-color darken(#FFF300, 10%)